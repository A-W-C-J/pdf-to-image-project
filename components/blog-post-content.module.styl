// ReactMarkdown ÊéíÁâà‰ºòÂåñÊ†∑Âºè

// ÂèòÈáèÂÆö‰πâ
$primary-color = #3b82f6
$text-color = #374151
$text-muted = #6b7280
$border-color = #e5e7eb
$bg-muted = #f9fafb
$code-bg = #f3f4f6
$blockquote-border = #d1d5db
$shadow-sm = 0 1px 2px 0 rgba(0, 0, 0, 0.05)

// Ê∑±Ëâ≤Ê®°ÂºèÂèòÈáè
$dark-text = #f3f4f6
$dark-text-muted = #9ca3af
$dark-border = #374151
$dark-bg-muted = #1f2937
$dark-code-bg = #374151
$dark-blockquote-border = #4b5563

// ‰∏ªË¶ÅÂÜÖÂÆπÂÆπÂô®
.markdownContent
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif
  line-height: 1.7
  color: $text-color
  max-width: none
  
  // Ê∑±Ëâ≤Ê®°Âºè
  :global(.dark) &
    color: $dark-text

  // ÊÆµËêΩÊ†∑Âºè
  p
    margin: 1.25rem 0
    font-size: 1rem
    line-height: 1.8
    text-align: justify
    
    &:first-child
      margin-top: 0
    
    &:last-child
      margin-bottom: 0

  // Ê†áÈ¢òÊ†∑Âºè
  h1, h2, h3, h4, h5, h6
    font-weight: 700
    line-height: 1.3
    margin-top: 2.5rem
    margin-bottom: 1rem
    color: $text-color
    
    :global(.dark) &
      color: $dark-text
    
    &:first-child
      margin-top: 0

  h1
    font-size: 2.25rem
    border-bottom: 3px solid $primary-color
    padding-bottom: 0.5rem
    margin-bottom: 1.5rem

  h2
    font-size: 1.875rem
    border-bottom: 2px solid $border-color
    padding-bottom: 0.375rem
    
    :global(.dark) &
      border-bottom-color: $dark-border

  h3
    font-size: 1.5rem
    position: relative
    padding-left: 1rem
    
    &::before
      content: ''
      position: absolute
      left: 0
      top: 0.25rem
      width: 4px
      height: 1.25rem
      background: $primary-color
      border-radius: 2px

  h4
    font-size: 1.25rem
    color: $primary-color
    
    :global(.dark) &
      color: lighten($primary-color, 20%)

  h5
    font-size: 1.125rem
    font-weight: 600

  h6
    font-size: 1rem
    font-weight: 600
    color: $text-muted
    
    :global(.dark) &
      color: $dark-text-muted

  // ÂàóË°®Ê†∑Âºè
  ul, ol
    margin: 1.25rem 0
    padding-left: 1.5rem
    
    li
      margin: 0.5rem 0
      line-height: 1.7
      
      p
        margin: 0.25rem 0
      
      // ÂµåÂ•óÂàóË°®
      ul, ol
        margin: 0.5rem 0
        
  ul
    li
      position: relative
      
      &::marker
        color: $primary-color
        font-size: 1.2em

  ol
    li
      &::marker
        color: $primary-color
        font-weight: 600

  // ÂºïÁî®ÂùóÊ†∑Âºè
  blockquote
    margin: 1.5rem 0
    padding: 1rem 1.5rem
    border-left: 4px solid $primary-color
    background: $bg-muted
    border-radius: 0 8px 8px 0
    position: relative
    
    :global(.dark) &
      background: $dark-bg-muted
      border-left-color: lighten($primary-color, 20%)
    
    &::before
      content: '"'
      position: absolute
      top: -0.5rem
      left: 1rem
      font-size: 3rem
      color: $primary-color
      opacity: 0.3
      font-family: Georgia, serif
    
    p
      margin: 0.5rem 0
      font-style: italic
      color: $text-muted
      
      :global(.dark) &
        color: $dark-text-muted
      
      &:first-child
        margin-top: 0
      
      &:last-child
        margin-bottom: 0

  // ‰ª£Á†ÅÊ†∑Âºè
  code
    font-family: 'Fira Code', 'Monaco', 'Cascadia Code', 'Roboto Mono', monospace
    font-size: 0.875rem
    
    // Ë°åÂÜÖ‰ª£Á†Å
    &:not(pre code)
      background: $code-bg
      color: #e11d48
      padding: 0.125rem 0.375rem
      border-radius: 4px
      font-weight: 500
      
      :global(.dark) &
        background: $dark-code-bg
        color: #fbbf24

  // ‰ª£Á†ÅÂùóÊ†∑Âºè
  pre
    margin: 1.5rem 0
    padding: 1.25rem
    background: #1e293b
    border-radius: 8px
    overflow-x: auto
    box-shadow: $shadow-sm
    border: 1px solid $border-color
    
    :global(.dark) &
      border-color: $dark-border
    
    code
      background: none
      color: #e2e8f0
      padding: 0
      font-size: 0.875rem
      line-height: 1.6

  // Ë°®Ê†ºÊ†∑Âºè
  table
    width: 100%
    margin: 1.5rem 0
    border-collapse: collapse
    border-radius: 8px
    overflow: hidden
    box-shadow: $shadow-sm
    border: 1px solid $border-color
    
    :global(.dark) &
      border-color: $dark-border
    
    thead
      background: $bg-muted
      
      :global(.dark) &
        background: $dark-bg-muted
    
    th
      padding: 0.875rem 1rem
      text-align: left
      font-weight: 600
      color: $text-color
      border-bottom: 2px solid $border-color
      
      :global(.dark) &
        color: $dark-text
        border-bottom-color: $dark-border
    
    td
      padding: 0.75rem 1rem
      border-bottom: 1px solid $border-color
      
      :global(.dark) &
        border-bottom-color: $dark-border
    
    tbody
      tr
        &:hover
          background: rgba($primary-color, 0.05)
          
          :global(.dark) &
            background: rgba($primary-color, 0.1)
        
        &:last-child
          td
            border-bottom: none

  // ÈìæÊé•Ê†∑Âºè
  a
    color: $primary-color
    text-decoration: none
    font-weight: 500
    transition: all 0.2s ease
    border-bottom: 1px solid transparent
    
    &:hover
      color: darken($primary-color, 10%)
      border-bottom-color: $primary-color
    
    :global(.dark) &
      color: lighten($primary-color, 20%)
      
      &:hover
        color: lighten($primary-color, 30%)
        border-bottom-color: lighten($primary-color, 20%)

  // ÂàÜÈöîÁ∫øÊ†∑Âºè
  hr
    margin: 2rem 0
    border: none
    height: 2px
    background: linear-gradient(90deg, transparent, $border-color, transparent)
    
    :global(.dark) &
      background: linear-gradient(90deg, transparent, $dark-border, transparent)

  // ÂõæÁâáÊ†∑Âºè
  img
    max-width: 100%
    height: auto
    margin: 1.5rem auto
    display: block
    border-radius: 8px
    box-shadow: $shadow-sm
    border: 1px solid $border-color
    
    :global(.dark) &
      border-color: $dark-border

  // Âº∫Ë∞ÉÊñáÊú¨
  strong, b
    font-weight: 700
    color: $text-color
    
    :global(.dark) &
      color: $dark-text

  em, i
    font-style: italic
    color: $text-muted
    
    :global(.dark) &
      color: $dark-text-muted

  // Âà†Èô§Á∫ø
  del
    text-decoration: line-through
    opacity: 0.7

  // Ê†áËÆ∞ÊñáÊú¨
  mark
    background: rgba($primary-color, 0.2)
    padding: 0.125rem 0.25rem
    border-radius: 3px
    
    :global(.dark) &
      background: rgba($primary-color, 0.3)

// ÂìçÂ∫îÂºèËÆæËÆ°
@media (max-width: 768px)
  .markdownContent
    h1
      font-size: 1.875rem
    
    h2
      font-size: 1.5rem
    
    h3
      font-size: 1.25rem
    
    pre
      margin-left: -1rem
      margin-right: -1rem
      border-radius: 0
    
    table
      font-size: 0.875rem
      
      th, td
        padding: 0.5rem 0.75rem

  // Êï∞Â≠¶ÂÖ¨ÂºèÊ†∑Âºè
  .katex
    font-size: 1.1em
    
  .katex-display
    margin: 1.5rem 0
    text-align: center
    overflow-x: auto
    
    .katex
      display: inline-block
      text-align: initial

  // ËÑöÊ≥®Ê†∑Âºè
  .footnotes
    margin-top: 3rem
    padding-top: 1.5rem
    border-top: 2px solid $border-color
    font-size: 0.875rem
    
    :global(.dark) &
      border-top-color: $dark-border
    
    ol
      padding-left: 1rem
      
      li
        margin: 0.75rem 0
        
        p
          margin: 0.25rem 0
    
    .footnote-backref
      margin-left: 0.5rem
      color: $primary-color
      text-decoration: none
      
      &:hover
        text-decoration: underline

  // ËÑöÊ≥®ÂºïÁî®Ê†∑Âºè
  .footnote-ref
    color: $primary-color
    text-decoration: none
    font-weight: 600
    
    &:hover
      text-decoration: underline
    
    &::before
      content: '['
    
    &::after
      content: ']'

  // ÁõÆÂΩïÊ†∑Âºè
  .table-of-contents
    background: $bg-muted
    border: 1px solid $border-color
    border-radius: 8px
    padding: 1.5rem
    margin: 2rem 0
    
    :global(.dark) &
      background: $dark-bg-muted
      border-color: $dark-border
    
    &::before
      content: 'üìã ÁõÆÂΩï'
      display: block
      font-weight: 700
      font-size: 1.125rem
      margin-bottom: 1rem
      color: $text-color
      
      :global(.dark) &
        color: $dark-text
    
    ul
      margin: 0
      padding-left: 1rem
      
      li
        margin: 0.375rem 0
        
        a
          color: $text-muted
          text-decoration: none
          
          &:hover
            color: $primary-color
            text-decoration: underline
          
          :global(.dark) &
            color: $dark-text-muted
            
            &:hover
              color: lighten($primary-color, 20%)

  // Emoji Ê†∑Âºè
  .emoji
    display: inline-block
    vertical-align: middle
    font-size: 1.2em
    margin: 0 0.1em

  // ‰ªªÂä°ÂàóË°®Ê†∑Âºè
  .task-list-item
    list-style: none
    position: relative
    padding-left: 0
    
    input[type="checkbox"]
      position: absolute
      left: -1.5rem
      top: 0.25rem
      margin: 0
      cursor: pointer
      
      &:checked + *
        text-decoration: line-through
        opacity: 0.7

  // ÈîÆÁõòÊåâÈîÆÊ†∑Âºè
  kbd
    background: $code-bg
    border: 1px solid $border-color
    border-radius: 4px
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2), 0 2px 0 0 rgba(255, 255, 255, 0.7) inset
    color: $text-color
    display: inline-block
    font-size: 0.85em
    font-weight: 700
    line-height: 1
    padding: 2px 4px
    white-space: nowrap
    
    :global(.dark) &
      background: $dark-code-bg
      border-color: $dark-border
      color: $dark-text
      box-shadow: 0 1px 1px rgba(0, 0, 0, 0.4), 0 2px 0 0 rgba(255, 255, 255, 0.1) inset

  // È´ò‰∫ÆÊñáÊú¨Ê†∑Âºè
  mark
    background: linear-gradient(120deg, rgba($primary-color, 0.3) 0%, rgba($primary-color, 0.3) 100%)
    background-repeat: no-repeat
    background-size: 100% 0.2em
    background-position: 0 88%
    padding: 0.125rem 0.25rem
    border-radius: 3px
    
    :global(.dark) &
      background: linear-gradient(120deg, rgba($primary-color, 0.4) 0%, rgba($primary-color, 0.4) 100%)

  // ‰∏äÊ†áÂíå‰∏ãÊ†áÊ†∑Âºè
  sup, sub
    font-size: 0.75em
    line-height: 0
    position: relative
    vertical-align: baseline
    
  sup
    top: -0.5em
    
  sub
    bottom: -0.25em

  // Áº©ÂÜôÊ†∑Âºè
  abbr
    border-bottom: 1px dotted $text-muted
    cursor: help
    text-decoration: none
    
    :global(.dark) &
      border-bottom-color: $dark-text-muted

  // ÂÆö‰πâÂàóË°®Ê†∑Âºè
  dl
    margin: 1.25rem 0
    
    dt
      font-weight: 700
      margin-top: 1rem
      color: $text-color
      
      :global(.dark) &
        color: $dark-text
      
      &:first-child
        margin-top: 0
    
    dd
      margin: 0.5rem 0 1rem 1.5rem
      color: $text-muted
      
      :global(.dark) &
        color: $dark-text-muted

  // ËØ¶ÊÉÖ/ÊëòË¶ÅÊ†∑Âºè
  details
    margin: 1.5rem 0
    border: 1px solid $border-color
    border-radius: 8px
    overflow: hidden
    
    :global(.dark) &
      border-color: $dark-border
    
    summary
      background: $bg-muted
      padding: 1rem
      cursor: pointer
      font-weight: 600
      user-select: none
      
      :global(.dark) &
        background: $dark-bg-muted
      
      &:hover
        background: darken($bg-muted, 5%)
        
        :global(.dark) &
          background: lighten($dark-bg-muted, 5%)
      
      &::marker
        color: $primary-color
    
    > *:not(summary)
      padding: 1rem
      margin: 0

// ÊâìÂç∞Ê†∑Âºè
@media print
  .markdownContent
    color: black !important
    
    a
      color: black !important
      text-decoration: underline !important
    
    pre, code
      background: #f5f5f5 !important
      color: black !important
    
    blockquote
      background: #f9f9f9 !important
      border-left-color: #ccc !important
    
    .katex
      color: black !important
    
    .footnotes
      border-top-color: #ccc !important