// Tag Cloud Component Styles
// 定义变量
$transition-duration = 0.2s
$hover-scale = 1.05
$opacity-secondary = 0.7

// 标签容器
.tagContainer
  display: flex
  flex-wrap: wrap
  gap: 0.5rem

// 标签基础样式
.tagBadge
  transition: transform $transition-duration ease
  cursor: pointer
  
  &:hover
    transform: scale($hover-scale)

// 标签尺寸变体
.tagSizeSmall
  font-size: 0.75rem
  padding: 0.25rem 0.5rem

.tagSizeMedium
  font-size: 0.875rem
  padding: 0.375rem 0.75rem

.tagSizeLarge
  font-size: 1rem
  padding: 0.5rem 1rem
  font-weight: 600

// 标签链接样式
.tagLink
  display: flex
  align-items: center
  gap: 0.25rem
  transition: color $transition-duration ease
  text-decoration: none
  
  &:hover
    color: var(--primary)

// 标签计数样式
.tagCount
  font-size: 0.75rem
  opacity: $opacity-secondary

// 查看更多链接
.viewMoreContainer
  margin-top: 1rem
  text-align: center

.viewMoreLink
  font-size: 0.875rem
  color: var(--muted-foreground)
  transition: color $transition-duration ease
  text-decoration: none
  
  &:hover
    color: var(--foreground)

// 加载状态
.loadingContainer
  .loadingTags
    display: flex
    flex-wrap: wrap
    gap: 0.5rem
    
  .loadingTag
    height: 1.5rem
    background-color: var(--muted)
    border-radius: 0.25rem
    width: 4rem
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite

// 动画定义
@keyframes pulse
  0%, 100%
    opacity: 1
  50%
    opacity: 0.5

// 响应式设计
@media (max-width: 768px)
  .tagContainer
    gap: 0.375rem
    
  .tagSizeLarge
    font-size: 0.9rem
    padding: 0.4rem 0.8rem
    
  .tagSizeMedium
    font-size: 0.8rem
    padding: 0.3rem 0.6rem
    
  .tagSizeSmall
    font-size: 0.7rem
    padding: 0.2rem 0.4rem